{% extends 'base.html.twig' %}

{% block title %}Classements officiels{% endblock %}

{% block body %}
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link text-info active pr-5" data-toggle="tab" href="#ATP">ATP</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-danger pr-5" data-toggle="tab" href="#WTA">WTA</a>
        </li>
    </ul>
    <div id="race-rankings" class="tab-content">
        <div class="tab-pane fade show active" id="ATP">
            <div class="row mt-3 mb-2">
                <div class="col-12">
                    <div class="text-center">
                        <span class="h4">Classement ATP officiel</span>
                        <span class="text-secondary"> - Saison {{ atpRankings.year }} semaine {{ atpRankings.week }}</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Rang</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Points</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for player in atpRankings.player_rankings %}
                        <tr>
                            <td>
                                {% if player.ranking_movement != 0  %}
                                    {% if player.ranking_movement > 0 %}
                                        <span class="small text-success">
                                            <span class="fas fa-arrow-up fa-xs"></span> {{ player.ranking_movement }}
                                        </span>
                                    {% else %}
                                        <span class="small text-danger">
                                            <span class="fas fa-arrow-down fa-xs"></span> {{ player.ranking_movement }}
                                        </span>
                                    {% endif %}
                                {% endif %}
                            </td>
                            <td>{{ player.rank }}</td>
                            <td>
                                <a href="{{ path('player_view', {
                                    'apiIdInt': player.player.id | apiId,
                                    'slug': player.player.name | slugify})  }}">
                                    <img class="mb-1"
                                         src="{{ asset('build/flags/'~ player.player.country_code ~'.png') }}"
                                         alt="{{ player.player.nationality }}"
                                         height="12" width="15"/>
                                    <span>{{ player.player.name }}</span>
                                </a>
                            </td>
                            <td>{{ player.points }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane fade show" id="WTA">
            <div class="row mt-3 mb-2">
                <div class="col-12">
                    <div class="text-center">
                        <span class="h4">Classement WTA officiel</span>
                        <span class="text-secondary"> - Saison {{ atpRankings.year }} semaine {{ atpRankings.week }}</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Rang</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Points</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for player in wtaRankings.player_rankings %}
                            <tr>
                                <td>
                                    {% if player.ranking_movement != 0  %}
                                        {% if player.ranking_movement > 0 %}
                                            <span class="small text-success">
                                            <span class="fas fa-arrow-up fa-xs"></span> {{ player.ranking_movement }}
                                        </span>
                                        {% else %}
                                            <span class="small text-danger">
                                            <span class="fas fa-arrow-down fa-xs"></span> {{ player.ranking_movement }}
                                        </span>
                                        {% endif %}
                                    {% endif %}
                                </td>
                                <td>{{ player.rank }}</td>
                                <td>
                                    <a href="{{ path('player_view', {
                                        'apiIdInt': player.player.id | apiId,
                                        'slug': player.player.name | slugify})  }}">
                                    <img class="mb-1"
                                         src="{{ asset('build/flags/'~ player.player.country_code ~'.png') }}"
                                         alt="{{ player.player.nationality }}"
                                         height="12" width="15"/>
                                    <span>{{ player.player.name }}</span>
                                    </a>
                                </td>
                                <td>{{ player.points }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
