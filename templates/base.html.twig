<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="jumbotron mb-0 p-3 text-center">
                <div class="h1">TENNIS</div>
            </div>

            <nav class="navbar navbar-expand-md navbar-dark bg-primary border-bottom mb-1">
                <div class="container">
                    <a class="navbar-brand" href="{{ path('home') }}">Accueil</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                            data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('player_index') }}">Joueurs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Classement</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Calendrier</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <section>
            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </section>

        <footer class="border-top mt-2">
            <div class="container">
                <div class="row">Footer</div>
            </div>

        </footer>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
